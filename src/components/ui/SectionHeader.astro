---
import { cn } from "../../lib/utils";

interface Props {
    title: string;
    subtitle?: string;
    description?: string;
    align?: "left" | "center";
    className?: string;
}

const {
    title,
    subtitle,
    description,
    align = "center",
    className,
} = Astro.props;
---

<div
    class={cn(
        "mb-12 md:mb-20",
        align === "center" ? "text-center" : "text-left",
        className,
    )}
>
    {
        subtitle && (
            <span class="text-secondary font-medium tracking-wider uppercase text-sm mb-4 block animate-pulse-glow">
                {subtitle}
            </span>
        )
    }
    <h2
        class="text-3xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-white via-white to-white/70 mb-6 drop-shadow-lg"
    >
        {title}
    </h2>
    {
        description && (
            <p class="text-lg text-gray-400 max-w-2xl mx-auto leading-relaxed">
                {description}
            </p>
        )
    }
</div>
