---
import logo from "../assets/logo.png";
import Container from "./ui/Container.astro";
import { useTranslations } from "../i18n/utils";

interface Props {
    lang: "es" | "en";
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
---

<footer
    class="bg-dark-card border-t border-white/5 py-12 md:py-20 relative overflow-hidden"
>
    <!-- Background Glow -->
    <div
        class="absolute top-0 left-1/4 w-96 h-96 bg-primary/20 rounded-full blur-[128px] pointer-events-none"
    >
    </div>
    <div
        class="absolute bottom-0 right-1/4 w-96 h-96 bg-secondary/10 rounded-full blur-[128px] pointer-events-none"
    >
    </div>

    <Container>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12 md:gap-8 mb-16">
            <div class="col-span-1 md:col-span-2">
                <a href={`/${lang}/`} class="block mb-6">
                    <img
                        src={logo.src}
                        alt="Rafael Blanco Logo"
                        class="h-32 w-auto object-contain"
                    />
                </a>
                <p class="text-gray-400 max-w-sm mb-8">
                    {
                        lang === "es"
                            ? "Construyendo el futuro digital con soluciones web premium, diseño futurista y tecnología de vanguardia."
                            : "Crafting the digital future with premium web solutions, futuristic design, and cutting-edge technology."
                    }
                </p>
                <div class="flex gap-4">
                    <!-- Social Icons Placeholders -->
                    <a
                        href="#"
                        class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center hover:bg-primary transition-colors text-white"
                    >
                        <span class="sr-only">Twitter</span>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path
                                d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"
                            ></path></svg
                        >
                    </a>
                    <a
                        href="#"
                        class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center hover:bg-primary transition-colors text-white"
                    >
                        <span class="sr-only">LinkedIn</span>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path
                                d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                            ></path><rect width="4" height="12" x="2" y="9"
                            ></rect><circle cx="4" cy="4" r="2"></circle></svg
                        >
                    </a>
                    <a
                        href="#"
                        class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center hover:bg-primary transition-colors text-white"
                    >
                        <span class="sr-only">Instagram</span>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><rect
                                width="20"
                                height="20"
                                x="2"
                                y="2"
                                rx="5"
                                ry="5"></rect><path
                                d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                            ></path><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"
                            ></line></svg
                        >
                    </a>
                </div>
            </div>

            <div>
                <h4 class="font-display font-bold text-lg mb-6">
                    {t("nav.services")}
                </h4>
                <ul class="space-y-4">
                    <li>
                        <a
                            href="#"
                            class="text-gray-400 hover:text-primary transition-colors"
                            >Web Development</a
                        >
                    </li>
                    <li>
                        <a
                            href="#"
                            class="text-gray-400 hover:text-primary transition-colors"
                            >UI/UX Design</a
                        >
                    </li>
                    <li>
                        <a
                            href="#"
                            class="text-gray-400 hover:text-primary transition-colors"
                            >E-Commerce</a
                        >
                    </li>
                    <li>
                        <a
                            href="#"
                            class="text-gray-400 hover:text-primary transition-colors"
                            >App Development</a
                        >
                    </li>
                </ul>
            </div>

            <div>
                <h4 class="font-display font-bold text-lg mb-6">
                    {t("nav.about")}
                </h4>
                <ul class="space-y-4">
                    <li>
                        <a
                            href="#"
                            class="text-gray-400 hover:text-primary transition-colors"
                            >{t("nav.about")} Us</a
                        >
                    </li>
                    <li>
                        <a
                            href="#"
                            class="text-gray-400 hover:text-primary transition-colors"
                            >Careers</a
                        >
                    </li>
                    <li>
                        <a
                            href="#"
                            class="text-gray-400 hover:text-primary transition-colors"
                            >Blog</a
                        >
                    </li>
                    <li>
                        <a
                            href="#"
                            class="text-gray-400 hover:text-primary transition-colors"
                            >{t("nav.contact")}</a
                        >
                    </li>
                </ul>
            </div>
        </div>

        <div
            class="pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-gray-500"
        >
            <p>&copy; {currentYear} Rafael Blanco. {t("footer.rights")}</p>
            <div class="flex gap-6">
                <a href="#" class="hover:text-white transition-colors"
                    >{t("footer.privacy")}</a
                >
                <a href="#" class="hover:text-white transition-colors"
                    >{t("footer.terms")}</a
                >
            </div>
        </div>
    </Container>
</footer>
