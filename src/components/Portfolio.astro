---
import Section from "./ui/Section.astro";
import Container from "./ui/Container.astro";
import SectionHeader from "./ui/SectionHeader.astro";
import { useTranslations } from "../i18n/utils";

interface Props {
    lang: "es" | "en";
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const projects = [
    {
        title: { es: "FashionStore RBV", en: "FashionStore RBV" },
        category: { es: "E-Commerce Premium", en: "Premium E-Commerce" },
        image: "https://res.cloudinary.com/djvj32zic/image/upload/v1771951014/Captura_de_pantalla_2026-02-24_173459_btenqp.png",
        tags: ["Astro", "Tailwind", "Fullstack"],
        link: "https://fashionstorerbv3.victoriafp.online/",
    },
    {
        title: { es: "PARRA Web E-Commerce", en: "PARRA Web E-Commerce" },
        category: { es: "E-Commerce", en: "E-Commerce" },
        image: "https://res.cloudinary.com/djvj32zic/image/upload/v1771951513/Captura_de_pantalla_2026-02-24_174454_lz2suz.png",
        tags: ["Astro", "Tailwind", "UI/UX"],
        link: "https://parra-six.vercel.app/",
    },
];
---

<Section id="work" className="bg-white/5">
    <Container>
        <SectionHeader
            title={t("portfolio.title")}
            subtitle={t("portfolio.subtitle")}
            description={t("portfolio.desc")}
        />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {
                projects.map((project) => (
                    <a
                        href={project.link || "#"}
                        target={project.link ? "_blank" : "_self"}
                        rel={project.link ? "noopener noreferrer" : ""}
                        class="group relative rounded-2xl overflow-hidden aspect-video cursor-pointer"
                    >
                        <img
                            src={project.image}
                            alt={project.title[lang]}
                            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                            loading="lazy"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-dark/90 via-dark/50 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 flex flex-col justify-end p-8 translate-y-4 group-hover:translate-y-0">
                            <span class="text-primary font-medium mb-2">
                                {project.category[lang]}
                            </span>
                            <h3 class="text-2xl font-bold font-display text-white mb-4">
                                {project.title[lang]}
                            </h3>
                            <div class="flex flex-wrap gap-2">
                                {project.tags.map((tag) => (
                                    <span class="px-3 py-1 text-xs rounded-full bg-white/10 border border-white/20 text-gray-300 backdrop-blur-sm">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>
    </Container>
</Section>
