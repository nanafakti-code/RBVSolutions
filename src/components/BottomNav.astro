---
import logo from "../assets/logo.png";

interface Props {
    lang?: "es" | "en";
}

const { lang = "es" } = Astro.props;
---

<nav
    class="md:hidden fixed bottom-0 left-0 right-0 z-[100] bg-dark border-t border-white/5 shadow-[0_-10px_30px_rgba(0,0,0,0.5)] safe-area-padding"
>
    <!-- 
      We keep the basic nav container, but add enough height
      so elements align properly, while the central button can overflow upward.
    -->
    <div class="max-w-md mx-auto px-4">
        <div class="relative flex items-center justify-between h-20">
            <!-- Left Items -->
            <a
                href="#services"
                class="flex flex-col items-center justify-center flex-1 h-full gap-1 text-gray-400 hover:text-primary transition-colors"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-layout-grid"
                    ><rect width="7" height="7" x="3" y="3" rx="1"></rect><rect
                        width="7"
                        height="7"
                        x="14"
                        y="3"
                        rx="1"></rect><rect
                        width="7"
                        height="7"
                        x="14"
                        y="14"
                        rx="1"></rect><rect
                        width="7"
                        height="7"
                        x="3"
                        y="14"
                        rx="1"></rect></svg
                >
                <span class="text-[9px] font-bold uppercase tracking-wider"
                    >Servicios</span
                >
            </a>

            <a
                href="#work"
                class="flex flex-col items-center justify-center flex-1 h-full gap-1 text-gray-400 hover:text-primary transition-colors"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-briefcase"
                    ><path d="M16 20V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"
                    ></path><rect width="20" height="14" x="2" y="6" rx="2"
                    ></rect></svg
                >
                <span class="text-[9px] font-bold uppercase tracking-wider"
                    >Proyectos</span
                >
            </a>

            <!-- Central Logo (Floating Action Button style with Scroll to Top) -->
            <div class="relative flex-1 flex justify-center">
                <button
                    id="fab-scroll-top"
                    class="absolute -top-12 w-[68px] h-[68px] rounded-full shadow-[0_10px_25px_rgba(0,0,0,0.4)] hover:shadow-[0_10px_30px_rgba(112,0,255,0.4)] hover:scale-110 active:scale-95 transition-all duration-200 ease-out z-10 custom-glow overflow-hidden cursor-pointer bg-dark border-0 p-0 block"
                    aria-label="Volver arriba"
                >
                    <img
                        src="https://res.cloudinary.com/djvj32zic/image/upload/v1771981323/ChatGPT_Image_25_feb_2026_02_01_51_uakx7c.png"
                        alt="Subir"
                        class="w-full h-full object-cover rounded-full"
                    />
                </button>
            </div>

            <!-- Right Items -->
            <a
                href="#about"
                class="flex flex-col items-center justify-center flex-1 h-full gap-1 text-gray-400 hover:text-primary transition-colors"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-users"
                    ><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"
                    ></path><circle cx="9" cy="7" r="4"></circle><path
                        d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path
                        d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg
                >
                <span class="text-[9px] font-bold uppercase tracking-wider"
                    >Nosotros</span
                >
            </a>

            <a
                href="#contact"
                class="flex flex-col items-center justify-center flex-1 h-full gap-1 text-gray-400 hover:text-primary transition-colors"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-message-square"
                    ><path
                        d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"
                    ></path></svg
                >
                <span class="text-[9px] font-bold uppercase tracking-wider"
                    >Contacto</span
                >
            </a>
        </div>
    </div>
</nav>

<style>
    .safe-area-padding {
        padding-bottom: env(safe-area-inset-bottom);
    }

    nav {
        animation: slideUp 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .custom-glow {
        box-shadow:
            0 10px 25px rgba(0, 0, 0, 0.5),
            0 0 15px rgba(112, 0, 255, 0.4);
    }

    .custom-glow:hover {
        box-shadow:
            0 12px 28px rgba(0, 0, 0, 0.6),
            0 0 25px rgba(112, 0, 255, 0.6);
    }

    @keyframes slideUp {
        from {
            transform: translateY(100%);
        }
        to {
            transform: translateY(0);
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const fabButton = document.getElementById("fab-scroll-top");
        if (fabButton) {
            fabButton.addEventListener("click", (e) => {
                e.preventDefault();
                window.scrollTo({
                    top: 0,
                    behavior: "smooth",
                });
            });
        }
    });
</script>
