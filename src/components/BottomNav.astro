---
import logo from "../assets/logo.png";

interface Props {
    lang?: "es" | "en";
}

const { lang = "es" } = Astro.props;
---

<nav
    class="md:hidden fixed bottom-0 left-0 right-0 z-[100] bg-dark border-t border-white/5 shadow-[0_-10px_30px_rgba(0,0,0,0.5)] safe-area-padding"
>
    <div class="max-w-md mx-auto px-4">
        <div class="relative flex items-center justify-around h-16">
            <!-- Items -->
            <a
                href="#services"
                class="flex flex-col items-center justify-center flex-1 h-full gap-1 text-gray-400 hover:text-primary transition-colors"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-layout-grid"
                    ><rect width="7" height="7" x="3" y="3" rx="1"></rect><rect
                        width="7"
                        height="7"
                        x="14"
                        y="3"
                        rx="1"></rect><rect
                        width="7"
                        height="7"
                        x="14"
                        y="14"
                        rx="1"></rect><rect
                        width="7"
                        height="7"
                        x="3"
                        y="14"
                        rx="1"></rect></svg
                >
                <span class="text-[9px] font-bold uppercase tracking-wider"
                    >Servicios</span
                >
            </a>

            <a
                href="#work"
                class="flex flex-col items-center justify-center flex-1 h-full gap-1 text-gray-400 hover:text-primary transition-colors"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-briefcase"
                    ><path d="M16 20V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"
                    ></path><rect width="20" height="14" x="2" y="6" rx="2"
                    ></rect></svg
                >
                <span class="text-[9px] font-bold uppercase tracking-wider"
                    >Proyectos</span
                >
            </a>

            <!-- Central Logo -->
            <div class="relative flex-1 flex justify-center">
                <div
                    class="absolute -top-8 w-16 h-16 bg-dark rounded-full border-t border-white/5 shadow-2xl flex items-center justify-center"
                >
                    <a
                        href={`/${lang}/`}
                        class="w-14 h-14 bg-gradient-to-br from-primary to-purple-800 rounded-full flex items-center justify-center shadow-lg active:scale-90 transition-transform overflow-hidden"
                    >
                        <img
                            src={logo.src}
                            alt="RB"
                            class="w-8 h-8 object-contain brightness-0 invert"
                        />
                    </a>
                </div>
                <span
                    class="absolute -bottom-5 text-[9px] font-bold uppercase tracking-wider text-primary"
                    >Inicio</span
                >
            </div>

            <a
                href="#about"
                class="flex flex-col items-center justify-center flex-1 h-full gap-1 text-gray-400 hover:text-primary transition-colors"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-users"
                    ><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"
                    ></path><circle cx="9" cy="7" r="4"></circle><path
                        d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path
                        d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg
                >
                <span class="text-[9px] font-bold uppercase tracking-wider"
                    >Nosotros</span
                >
            </a>

            <a
                href="#contact"
                class="flex flex-col items-center justify-center flex-1 h-full gap-1 text-gray-400 hover:text-primary transition-colors"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-message-square"
                    ><path
                        d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"
                    ></path></svg
                >
                <span class="text-[9px] font-bold uppercase tracking-wider"
                    >Contacto</span
                >
            </a>
        </div>
    </div>
</nav>

<style>
    .safe-area-padding {
        padding-bottom: env(safe-area-inset-bottom);
    }

    nav {
        animation: slideUp 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @keyframes slideUp {
        from {
            transform: translateY(100%);
        }
        to {
            transform: translateY(0);
        }
    }
</style>
